root = true

[*]
charset = utf-8
end_of_line = crlf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 4

[{*.bash, *.bats, *.sh, *.zsh, .bash_aliases, .bash_logout, .bash_profile, .bashrc, .profile}]
indent_size = 2
tab_width = 2
end_of_line = lf

[{*.graphqlconfig, *.har, *.jsb2, *.jsb3, *.json, .babelrc, .eslintrc, .prettierrc, .stylelintrc, bowerrc, jest.config}]
indent_size = 2

[*.yml]
indent_size = 2
